# Backend - Groq API Integration (using GEMINI_ prefix for compatibility)
GEMINI_API_KEY=gsk_your_groq_api_key_here
GEMINI_API_URL=https://api.groq.com/openai/v1
TAVILY_API_KEY=your_tavily_api_key
TAVILY_API_URL=https://api.tavily.com/search
FIREBASE_CREDENTIALS_JSON=/path/to/firebase-service-account.json
DATABASE_URL=sqlite:///./backend_data.db
SECRET_KEY=change-me
JWT_SECRET_KEY=change-me-jwt-secret

# MongoDB Atlas
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/vaelis?retryWrites=true&w=majority

# CORS - comma-separated list of allowed origins
FRONTEND_ORIGINS=http://localhost:3000,https://your-production-frontend.com

# Optional
LOG_LEVEL=INFO
MAX_UPLOAD_SIZE_MB=10

# Frontend (use REACT_APP_ prefix for Create React App)
REACT_APP_BACKEND_URL=https://getting-started-with-gemini.onrender.com
REACT_APP_FIREBASE_API_KEY=
REACT_APP_FIREBASE_AUTH_DOMAIN=
REACT_APP_FIREBASE_PROJECT_ID=
